<h1>Listing photos</h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>Caption</th>
    <th>Device</th>
    <th>Assignment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.photo %></td>
    <td><%= photo.lat %></td>
    <td><%= photo.lon %></td>
    <td><%= photo.caption %></td>
    <td><%= photo.device_id %></td>
    <td><%= photo.assignment_id %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

