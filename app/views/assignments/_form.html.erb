<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :size => "60x10" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn" %>
    <%= link_to 'Cancel and return to homepage', root_path, class: "btn" %>
    <% if @existing_record %>
      <%= link_to 'Delete Assignment', @assignment, method: :delete, class: "btn", data: { confirm: 'This will also delete all photos in the Assignment, continue?' } %>
    <% end %>
  </div>
<% end %>

